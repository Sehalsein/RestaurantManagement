<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.seindev.sehalsein.restaurantmanagement">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/cookbook"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Splash"
            android:label="FoodUsher"
            android:theme="@style/MenuTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MenuHome"
            android:label="@string/title_menu_home"
            android:theme="@style/MenuTheme" />
        <activity
            android:name=".AddItemHome"
            android:label="@string/title_activity_add_item"
            android:theme="@style/AdminTheme" />
        <activity
            android:name=".AdminHome"
            android:label="@string/title_activity_admin_home"
            android:theme="@style/AdminTheme" />
        <activity
            android:name=".LoginHome"
            android:label="@string/title_activity_login"
            android:theme="@style/AdminTheme" />
        <activity
            android:name=".Welcome"
            android:label="@string/title_activity_welcome"
            android:theme="@style/MenuTheme">
            <intent-filter>
                <action android:name="android.nfc.action.TAG_DISCOVERED" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ItemDetail"
            android:label="@string/title_activity_item__detail"
            android:theme="@style/MenuTheme" />
        <activity
            android:name=".ShoppingCartHome"
            android:label="@string/title_activity_shopping_cart"
            android:theme="@style/MenuTheme" />
        <activity
            android:name=".ReviewHome"
            android:label="@string/title_activity_review_home"
            android:theme="@style/MenuTheme" />
        <activity
            android:name=".AddReviewHome"
            android:label="@string/title_activity_add_review"
            android:theme="@style/MenuTheme" />
        <activity
            android:name=".KitchenHome"
            android:label="@string/title_activity_kitchen_home"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".CashierHome"
            android:label="@string/title_activity_cashier"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".AddStaff"
            android:label="@string/title_activity_add_staff"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Filter"
            android:label="@string/title_activity_filter"
            android:theme="@style/AppTheme" />

        <uses-permission android:name="android.permission.NFC" />

        <uses-feature
            android:name="android.hardware.nfc"
            android:required="true" />

        <activity
            android:name=".UpdateItemHome"
            android:label="@string/title_activity_update_item_home"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".HomeDeliveryDetail"
            android:label="@string/title_activity_home_delivery_detail"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>
